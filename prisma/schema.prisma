generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}

model SoftHubProduct {
    id                     String                        @id @default(uuid())
    name                   String
    priceInPaise           Int
    filePath               String
    imagePath              String
    description            String
    isAvailableForPurchase Boolean                       @default(true)
    createdAt              DateTime                      @default(now())
    updatedAt              DateTime                      @updatedAt
    orders                 SoftHubOrder[]
    downloadVerifications  SoftHubDownloadVerification[]

    @@map("Product")
}

model SoftHubUser {
    id        String         @id @default(uuid())
    email     String         @unique
    createdAt DateTime       @default(now())
    updatedAt DateTime       @updatedAt
    orders    SoftHubOrder[]

    @@map("User")
}

// need to add method "razorpay" | "stripe"
model SoftHubOrder {
    id               String   @id @default(uuid())
    pricePaidInPaise Int
    createdAt        DateTime @default(now())
    updatedAt        DateTime @updatedAt

    userId    String
    productId String
    user      SoftHubUser    @relation(fields: [userId], references: [id], onDelete: Cascade)
    product   SoftHubProduct @relation(fields: [productId], references: [id], onDelete: Restrict)

    @@map("Order")
}

model SoftHubDownloadVerification {
    id        String         @id @default(uuid())
    expiresAt DateTime
    createdAt DateTime       @default(now())
    productId String
    product   SoftHubProduct @relation(fields: [productId], references: [id], onDelete: Cascade)

    @@map("DownloadVerification")
}
